<p id="notice"><%= notice %></p>
<div class="col-md-5">
<h1>Categorias</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.category %></td>
        <td><%= link_to 'Mostrar', category,  class: 'btn btn-secondary' %></td>
        <td><%= link_to 'Editar', edit_category_path(category), class: 'btn btn-primary' %></td>
        <td><%= button_to 'Borrar', category, method: :delete, data: { confirm: 'Â¿estas seguro?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Categoria', new_category_path, class: 'btn btn-primary' %>

</div>
